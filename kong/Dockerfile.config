FROM alpine:3.18

# Install required packages
RUN apk add --no-cache \
    curl \
    bash \
    jq \
    gettext \
    ca-certificates \
    openssl

# Create working directory
WORKDIR /app

# Copy configuration scripts
COPY kong-configure-unified.sh /app/kong-configure-unified.sh
COPY wait-for-it.sh /app/wait-for-it.sh

# Make scripts executable
RUN chmod +x /app/kong-configure-unified.sh /app/wait-for-it.sh

# Create a healthcheck script
RUN echo '#!/bin/sh\n\
if [ -f /app/oidc-config-completed ]; then\n\
  exit 0\n\
else\n\
  exit 1\n\
fi' > /app/healthcheck.sh && chmod +x /app/healthcheck.sh

# Set the entrypoint
ENTRYPOINT ["/bin/bash", "-c", "/app/wait-for-it.sh kong:8001 -t 120 -- /app/wait-for-it.sh keycloak:8080 -t 120 -- /app/kong-configure-unified.sh all && touch /app/oidc-config-completed && tail -f /dev/null"]

# Healthcheck
HEALTHCHECK --interval=5s --timeout=3s --start-period=10s --retries=3 \
  CMD ["/app/healthcheck.sh"] 