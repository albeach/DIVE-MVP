CYAN='\033[0;36m'
WHITE='\033[1;37m'
RESET='\033[0m'
BOLD='\033[1m'
DIM='\033[2m'

# Emoji aliases for visual cues
EMOJI_CHECK="âœ… "
EMOJI_WARNING="âš ï¸  "
