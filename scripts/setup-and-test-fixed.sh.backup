# Function to print sub-headers / steps
print_step() {
  echo
  echo -e "${CYAN}${BOLD}â–¶ ${1}${RESET}"
  echo -e "${CYAN}${DIM}$(printf '%.sâ”€' $(seq 1 50))${RESET}"
